<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatClient.ChangePasswordsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center">
			<Label Text="Current Password" HorizontalOptions="Center" FontSize="Medium"/>
			<Entry x:Name="oldPasswordEntry" IsPassword="True" HorizontalOptions="FillAndExpand"/>
			<Label Text="New Password" HorizontalOptions="Center" FontSize="Medium"/>
			<Entry x:Name="newPasswordEntry" IsPassword="True" HorizontalOptions="FillAndExpand"/>
			<Label Text="Confirm New Password" HorizontalOptions="Center" FontSize="Medium"/>
			<Entry x:Name="newPasswordCheckEntry" IsPassword="True" HorizontalOptions="FillAndExpand"/>
			<Button Text="Change Password" HorizontalOptions="Center" Clicked="ChangePasswordButton_Clicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>