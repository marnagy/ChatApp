<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatClient.ChatMessageOptionsPage">
	<ContentPage.Content>
        <StackLayout>
			<Label Text="Message Options" FontAttributes="Bold" FontSize="Large"
				   HorizontalOptions="Center"/>
			<Label x:Name="senderLabel" HorizontalOptions="Center"/>
			<Label x:Name="datetimeLabel" HorizontalOptions="Center"/>
			<Button Text="Delete Message" HorizontalOptions="FillAndExpand"
					BorderWidth="1" BackgroundColor="Transparent"
					Clicked="DeleteMessageButton_Clicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>