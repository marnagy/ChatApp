<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatClient.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
			<Label Text="Settings" FontAttributes="Bold" FontSize="Large"
				   HorizontalOptions="Center"/>
			<Button Text="Change password" HorizontalOptions="FillAndExpand"
					BorderWidth="1" BackgroundColor="Transparent" Clicked="ChangePasswordButton_Clicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>